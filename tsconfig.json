{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    //"outDir": "../dist/all/@angular",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "module": "commonjs",
    "strictNullChecks": false,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "footVerseWeb/**/*",
    "src/**/*",
    "node_modules/@types"
   ]
}
